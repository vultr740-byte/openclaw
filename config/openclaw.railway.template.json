{
  "meta": {
    "lastTouchedVersion": "2026.2.9"
  },
  "agents": {
    "defaults": {
      "compaction": {
        "mode": "safeguard"
      },
      "workspace": "${OPENCLAW_WORKSPACE_DIR}",
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "elevatedDefault": "full",
      "model": {
        "primary": "openai/${OPENAI_MODEL}"
      },
      "models": {
        "xai/${XAI_MODEL}": {
          "streaming": false
        }
      }
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions",
    "inbound": {
      "debounceMs": 1000
    }
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "tools": {
    "elevated": {
      "allowFrom": {
        "telegram": "__TELEGRAM_ALLOW_FROM__"
      }
    },
    "exec": {
      "security": "full",
      "ask": "off"
    }
  },
  "approvals": {
    "exec": {
      "enabled": true,
      "mode": "session"
    }
  },
  "gateway": {
    "bind": "lan",
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN}"
    },
    "controlUi": {
      "enabled": false
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "commands": {
        "nativeSkills": false
      },
      "dmPolicy": "allowlist",
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "allowFrom": "__TELEGRAM_ALLOW_FROM__",
      "groupPolicy": "allowlist",
      "streamMode": "partial"
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  },
  "models": {
    "providers": {
      "openai": {
        "baseUrl": "${OPENAI_BASE_URL}",
        "apiKey": "${OPENAI_API_KEY}",
        "api": "${OPENAI_API_MODE}",
        "models": [
          {
            "id": "${OPENAI_MODEL}",
            "name": "${OPENAI_MODEL}"
          }
        ]
      },
      "xai": {
        "baseUrl": "${XAI_BASE_URL}",
        "apiKey": "${XAI_API_KEY}",
        "api": "openai-completions",
        "models": [
          {
            "id": "${XAI_MODEL}",
            "name": "${XAI_MODEL}"
          }
        ]
      }
    }
  }
}
